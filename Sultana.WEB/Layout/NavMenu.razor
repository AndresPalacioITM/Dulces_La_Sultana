@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Components.Routing
@using System.Security.Claims
@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthenticationStateProvider

<div class="nav-container navbar navbar-expand-lg navbar-dark">
    <div class="container-fluid">
        <!-- LOGO + NOMBRE -->
        <a href="/" class="navbar-brand brand-logo d-flex align-items-center">
            <img src="images/icono-menu.jpg" alt="Logo Dulces La Sultana del Valle" />
            <span class="brand-text d-none d-md-inline ms-2">
                Dulces La Sultana del Valle
            </span>
        </a>

        <!-- BOTÓN HAMBURGUESA (MÓVIL) -->
        <button class="navbar-toggler" type="button" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>

        <!-- ZONA DERECHA (BOTONES) -->
        <div class="@NavMenuCssClass nav-links-wrapper justify-content-end">
            <ul class="navbar-nav align-items-lg-center">

                <!-- INICIO - Redirige según el cargo -->
                <li class="nav-item">
                    <button @onclick="RedirectToHome"
                            class="btn nav-btn nav-btn-light rounded-pill mx-1">
                        Inicio
                    </button>
                </li>

                <!-- Enlaces según autenticación -->
                <AuthorizeView>
                    <Authorized>
                        <!-- CERRAR SESIÓN -->
                        <li class="nav-item">
                            <NavLink href="/auth/logout"
                                     class="btn nav-btn nav-btn-accent rounded-pill mx-1">
                                Cerrar sesión
                            </NavLink>
                        </li>
                    </Authorized>
                    <NotAuthorized>
                        <!-- INICIAR SESIÓN -->
                        <li class="nav-item">
                            <NavLink href="/login"
                                     class="btn nav-btn nav-btn-light rounded-pill mx-1">
                                Iniciar Sesión
                            </NavLink>
                        </li>
                    </NotAuthorized>
                </AuthorizeView>
            </ul>
        </div>
    </div>
</div>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass =>
        collapseNavMenu ? "collapse navbar-collapse" : "navbar-collapse show";

    private async void RedirectToHome()
    {
        try
        {
            var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
            var user = authState.User;

            if (user.Identity?.IsAuthenticated == true)
            {
                var cargo = user.FindFirst("Cargo")?.Value?.ToLower();

                var redirectTo = cargo switch
                {
                    "admin" => "/EditEmpleados",
                    "empleado" => "/Empleado",
                    "proveedor" => "/Proveedor",
                    _ => "/"
                };

                Navigation.NavigateTo(redirectTo);
            }
            else
            {
                // Si no está autenticado, ir a la página principal
                Navigation.NavigateTo("/");
            }
        }
        catch (Exception ex)
        {
            // En caso de error, ir a la página principal
            Navigation.NavigateTo("/");
        }
    }

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}