@page "/"

<PageTitle>Inicio</PageTitle>

<div style="margin-top: 4rem;">
    <div class="home-header text-center mb-4">
        <h1 class="home-title">Dulces La Sultana del Valle</h1>
        <p class="home-subtitle">Bienvenido(a), gestiona empleados, producción e inventarios fácilmente.</p>
    </div>

    <AuthorizeView>
        <Authorized>
            <!-- OPCIONES SOLO PARA USUARIOS LOGUEADOS -->
            <div class="row g-4 card-grid justify-content-center">

                <div class="col-md-4 col-sm-6">
                    <NavLink class="card custom-card empleados-card text-decoration-none" href="/Empleados">
                        <div class="card-body">
                            <h5 class="card-title mb-1">
                                <i class="bi bi-person-workspace"></i> Empleados
                            </h5>
                            <p class="card-text">Crear, editar y eliminar empleados.</p>
                        </div>
                    </NavLink>
                </div>

                @* Aquí podrías agregar más opciones según el rol *@
            </div>

            <div class="alert alert-success mt-4 text-center shadow-sm">
                Sesión iniciada como: @context.User.Identity!.Name
            </div>
        </Authorized>

        <NotAuthorized>
            <!-- OPCIONES PARA USUARIOS SIN SESIÓN -->
            <div class="row g-4 card-grid justify-content-center">

                <div class="col-md-4 col-sm-6">
                    <NavLink class="card custom-card login-card text-decoration-none" href="/Login">
                        <div class="card-body">
                            <h5 class="card-title mb-1">
                                <i class="bi bi-shield-lock-fill"></i> Iniciar sesión
                            </h5>
                            <p class="card-text">Accede para ver módulos protegidos.</p>
                        </div>
                    </NavLink>
                </div>

                <div class="col-md-4 col-sm-6">
                    <NavLink class="card custom-card register-card text-decoration-none" href="/Register">
                        <div class="card-body">
                            <h5 class="card-title mb-1">
                                <i class="bi bi-person-plus-fill"></i> Registrarse
                            </h5>
                            <p class="card-text">Crear cuenta de empleado.</p>
                        </div>
                    </NavLink>
                </div>

            </div>

            <div class="alert alert-warning mt-4 text-center shadow-sm">
                No has iniciado sesión.
            </div>
        </NotAuthorized>
    </AuthorizeView>
</div>
