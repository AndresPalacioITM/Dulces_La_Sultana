@page "/empleados/crear"
@using Sultana.Shared.Entities
@using Sultana.WEB.Repositories
@inject IRepository repo
@inject NavigationManager nav

<div class="create-container">
    <div class="create-card">
        <h2 class="title">
            <i class="bi bi-person-plus"></i>
            Nuevo empleado
        </h2>

        <EditForm Model="model" OnValidSubmit="GuardarAsync">
            <DataAnnotationsValidator />

            <div class="form-grid">

                <div class="input-group">
                    <label>Nombre</label>
                    <InputText class="input" @bind-Value="model.Nombre" />
                    <ValidationMessage For="@(() => model.Nombre)" />
                </div>

                <div class="input-group">
                    <label>Cargo</label>
                    <InputText class="input" @bind-Value="model.Cargo" />
                    <ValidationMessage For="@(() => model.Cargo)" />
                </div>

                <div class="input-group">
                    <label>Contacto</label>
                    <InputText class="input" @bind-Value="model.Contacto" />
                    <ValidationMessage For="@(() => model.Contacto)" />
                </div>

                <div class="input-group">
                    <label>Email</label>
                    <InputText class="input" type="email" @bind-Value="model.Email" />
                    <ValidationMessage For="@(() => model.Email)" />
                </div>

            </div>

            <div class="btn-row">
                <button class="btn btn-back" type="button" @onclick="Cancelar">
                    <i class="bi bi-x-circle"></i> Cancelar
                </button>

                <button class="btn btn-save" type="submit">
                    <i class="bi bi-check2"></i> Guardar
                </button>
            </div>
        </EditForm>
    </div>
</div>

@code {
    private Empleado model = new();

    private async Task GuardarAsync()
    {
        var r = await repo.PostAsync("/api/Empleado", model);
        if (!r.Error)
            nav.NavigateTo("/empleados");
    }

    private void Cancelar() => nav.NavigateTo("/empleados");
}
