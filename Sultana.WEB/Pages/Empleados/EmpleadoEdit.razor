@page "/empleados/editar/{id:int}"
@using Sultana.Shared.Entities
@using Sultana.WEB.Repositories
@inject IRepository repo
@inject NavigationManager nav

<h3>Editar empleado</h3>

@if (model is null)
{
    <p>Cargando…</p>
}
else
{
    <EditForm Model="model" OnValidSubmit="GuardarAsync">
        <DataAnnotationsValidator />

        <div class="mb-3">
            <label>Nombre</label>
            <InputText class="form-control" @bind-Value="model.Nombre" />
        </div>

        <div class="mb-3">
            <label>Cargo</label>
            <InputText class="form-control" @bind-Value="model.Cargo" />
        </div>

        <div class="mb-3">
            <label>Contacto</label>
            <InputText class="form-control" @bind-Value="model.Contacto" />
        </div>

        <div class="mb-3">
            <label>Email</label>
            <InputText class="form-control" type="email" @bind-Value="model.Email" />
        </div>

        <button class="btn btn-primary" type="submit">Guardar</button>
        <button class="btn btn-secondary ms-2" type="button" @onclick="Cancelar">Cancelar</button>
    </EditForm>
}

@code {
    [Parameter] public int id { get; set; }
    private Empleado? model;

    protected override async Task OnInitializedAsync()
    {
        var r = await repo.GetAsync<Empleado>($"/api/Empleado/{id}");
        model = r.Error ? null : r.Response;
        if (model is null) nav.NavigateTo("/empleados");
    }

    private async Task GuardarAsync()
    {
        var r = await repo.PutAsync($"/api/Empleado/{model!.Id}", model);
        if (!r.Error) nav.NavigateTo("/empleados");
    }

    private void Cancelar() => nav.NavigateTo("/empleados");
}