@page "/Empleado/cmp/Consumos"
@using Sultana.Shared.Entities
@using CurrieTechnologies.Razor.SweetAlert2
@inject IRepository repository
@inject NavigationManager nav
@inject SweetAlertService sweetAlertService

<PageTitle>Gestión de Consumos de Materia Prima</PageTitle>

<style>
    /* Copia aquí todo el CSS de arriba */
</style>

<div class="consumos-page">

    <!-- Encabezado -->
    <div class="consumos-header text-center mb-4">
        <h1 class="consumos-title">Gestión de Consumos Registrados</h1>
        <p class="consumos-subtitle">
            Visualiza, actualiza y elimina los registros de consumo de materia prima.
        </p>
    </div>

    <!-- Botones de acción superiores -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <button class="btn btn-sultana-outline" @onclick="VolverARegistro">
            <i class="bi bi-arrow-left me-2"></i>
            Volver al Registro
        </button>

        <div class="d-flex align-items-center">
            <span class="badge badge-sultana me-3">
                @consumos.Count registros encontrados
            </span>
            <button class="btn btn-sultana-success" @onclick="RefrescarDatos">
                <i class="bi bi-arrow-clockwise me-2"></i>
                Actualizar
            </button>
        </div>
    </div>

    @if (cargando)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
                <span class="visually-hidden">Cargando...</span>
            </div>
            <p class="mt-3 text-muted">Cargando consumos registrados...</p>
        </div>
    }
    else if (!consumos.Any())
    {
        <div class="card text-center py-5 border-0 shadow-sm">
            <div class="card-body">
                <i class="bi bi-inbox display-1 text-muted mb-3"></i>
                <h3 class="text-muted mb-3">No hay consumos registrados</h3>
                <p class="text-muted mb-4">No se encontraron registros de consumo de materia prima.</p>
                <button class="btn btn-sultana-primary" @onclick="VolverARegistro">
                    <i class="bi bi-plus-circle me-2"></i>
                    Crear Primer Consumo
                </button>
            </div>
        </div>
    }
    else
    {
        <div class="card consumos-card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="bi bi-clipboard-data me-2"></i>
                    Lista de Consumos Registrados
                </h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-consumos mb-0">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Orden Producción</th>
                                <th>Lote MP</th>
                                <th>Responsable</th>
                                <th>Cantidad</th>
                                <th>Fecha</th>
                                <th class="text-center">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var consumo in consumos)
                            {
                                <tr>
                                    <td>
                                        <span class="badge badge-sultana">#@consumo.Id</span>
                                    </td>
                                    <td class="fw-semibold">@consumo.OrdenProduccionId</td>
                                    <td>@consumo.LoteMateriaPrimaId</td>
                                    <td>
                                        <span class="badge bg-light text-dark">@consumo.ResponsableId</span>
                                    </td>
                                    <td>
                                        <span class="fw-bold text-primary">@consumo.CantidadUsada.ToString("F2") kg</span>
                                    </td>
                                    <td>
                                        <small class="text-muted">@consumo.FechaHora.ToString("dd/MM/yyyy HH:mm")</small>
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group btn-action-group" role="group">
                                            <button class="btn btn-edit btn-sm"
                                                    @onclick="() => EditarConsumo(consumo.Id)"
                                                    title="Editar consumo">
                                                <i class="bi bi-pencil"></i>
                                            </button>
                                            <button class="btn btn-delete btn-sm"
                                                    @onclick="() => EliminarConsumo(consumo)"
                                                    title="Eliminar consumo">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Pie de página con resumen -->
        <div class="row mt-4">
            <div class="col-md-6">
                <div class="card bg-light border-0">
                    <div class="card-body py-3">
                        <small class="text-muted">
                            <i class="bi bi-info-circle me-1"></i>
                            Total: @consumos.Count consumos registrados
                        </small>
                    </div>
                </div>
            </div>
            <div class="col-md-6 text-end">
                <small class="text-muted">
                    Última actualización: @DateTime.Now.ToString("dd/MM/yyyy HH:mm")
                </small>
            </div>
        </div>
    }
</div>

@code {
    private List<ConsumoMP> consumos = new();
    private bool cargando = true;

    protected override async Task OnInitializedAsync()
    {
        await CargarConsumos();
    }

    private async Task CargarConsumos()
    {
        cargando = true;
        StateHasChanged();

        try
        {
            var response = await repository.GetAsync<List<ConsumoMP>>("api/ConsumoMP");
            if (!response.Error)
            {
                consumos = response.Response ?? new List<ConsumoMP>();
            }
            else
            {
                var errorMsg = await response.GetErrorMessageAsync();
                await sweetAlertService.FireAsync("Error", errorMsg, SweetAlertIcon.Error);
            }
        }
        catch (Exception ex)
        {
            await sweetAlertService.FireAsync("Error", $"Error al cargar consumos: {ex.Message}", SweetAlertIcon.Error);
        }
        finally
        {
            cargando = false;
            StateHasChanged();
        }
    }

    private async Task RefrescarDatos()
    {
        await CargarConsumos();
        await sweetAlertService.FireAsync("Éxito", "Datos actualizados correctamente", SweetAlertIcon.Success);
    }

    private void VolverARegistro()
    {
        nav.NavigateTo("/Empleado/Consumo");
    }

    private void EditarConsumo(long id)
    {
        nav.NavigateTo($"/Empleado/cmp/EditarConsumo/{id}");
    }

    private async Task EliminarConsumo(ConsumoMP consumo)
    {
        var result = await sweetAlertService.FireAsync(new SweetAlertOptions
        {
            Title = "¿Estás seguro?",
            Text = $"¿Eliminar el consumo #{consumo.Id} de {consumo.CantidadUsada:F2}kg?",
            Icon = SweetAlertIcon.Warning,
            ShowCancelButton = true,
            ConfirmButtonText = "Sí, eliminar",
            CancelButtonText = "Cancelar",
            ConfirmButtonColor = "#dc3545"
        });

        if (!string.IsNullOrEmpty(result.Value))
        {
            try
            {
                var response = await repository.DeleteAsync($"api/ConsumoMP/{consumo.Id}");
                if (!response.Error)
                {
                    await sweetAlertService.FireAsync("Eliminado", "Consumo eliminado correctamente", SweetAlertIcon.Success);
                    await CargarConsumos();
                }
                else
                {
                    var errorMsg = await response.GetErrorMessageAsync();
                    await sweetAlertService.FireAsync("Error", errorMsg, SweetAlertIcon.Error);
                }
            }
            catch (Exception ex)
            {
                await sweetAlertService.FireAsync("Error", $"Error al eliminar: {ex.Message}", SweetAlertIcon.Error);
            }
        }
    }
}