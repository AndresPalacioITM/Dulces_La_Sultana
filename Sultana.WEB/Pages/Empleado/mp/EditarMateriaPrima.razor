@page "/Empleado/mp/EditarMateriaPrima/{Id:int}"
@using Sultana.Shared.Entities
@using CurrieTechnologies.Razor.SweetAlert2
@inject IRepository repository
@inject NavigationManager nav
@inject SweetAlertService sweetAlertService

<PageTitle>Editar Materia Prima</PageTitle>

<link href="css/materia-prima.css" rel="stylesheet" />

<div class="editar-materia-prima-page">
    <div class="editar-materia-prima-header text-center mb-4">
        <h1 class="editar-materia-prima-title">Editar Materia Prima</h1>
        <p class="editar-materia-prima-subtitle">Modifica los datos de la materia prima</p>
    </div>

    @if (cargando)
    {
        <div class="loading-state">
            <div class="spinner-border text-primary loading-state" role="status">
                <span class="visually-hidden">Cargando...</span>
            </div>
            <p class="mt-3 text-muted">Cargando materia prima...</p>
        </div>
    }
    else if (materiaPrima == null)
    {
        <div class="alert alert-danger text-center">
            <i class="bi bi-exclamation-triangle me-2"></i>
            No se encontró la materia prima solicitada.
        </div>
        <div class="text-center">
            <button class="btn btn-editar-mp-primary" @onclick="VolverAGestion">
                <i class="bi bi-arrow-left me-2"></i>
                Volver a la gestión
            </button>
        </div>
    }
    else
    {
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <!-- Información de ayuda -->
                <div class="help-text">
                    <h6><i class="bi bi-info-circle me-2"></i>Información importante</h6>
                    <p class="mb-0">
                        Actualiza los datos de la materia prima. Los campos marcados con <span class="field-required">*</span> son obligatorios.
                    </p>
                </div>

                <div class="card editar-materia-prima-card">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="bi bi-pencil-square me-2"></i>
                            Editando Materia Prima <span class="id-badge-editar">#@materiaPrima.Id</span>
                        </h5>
                    </div>
                    <div class="card-body">
                        <EditForm Model="@materiaPrima" OnValidSubmit="ActualizarMateriaPrima" class="materia-prima-form">
                            <DataAnnotationsValidator />
                            <ValidationSummary class="validation-summary-mp" />

                            <!-- Información Básica -->
                            <div class="form-section-mp">
                                <h6 class="form-section-title-mp">
                                    <i class="bi bi-info-circle me-2"></i>
                                    Información Básica
                                </h6>

                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label field-required">Nombre</label>
                                        <InputText class="form-control" @bind-Value="materiaPrima.Nombre"
                                                   placeholder="Ingrese el nombre de la materia prima" />
                                        <div class="form-text">Máximo 120 caracteres</div>
                                        <ValidationMessage For="@(() => materiaPrima.Nombre)" class="validation-message-editar" />
                                    </div>

                                    <div class="col-md-6 mb-3">
                                        <label class="form-label field-required">Unidad de Medida</label>
                                        <div class="input-group-mp">
                                            <InputText class="form-control" @bind-Value="materiaPrima.UnidadMedida"
                                                       placeholder="kg, g, L, ml" />
                                            <span class="input-group-text">UD</span>
                                        </div>
                                        <div class="form-text">Ej: kg, g, L, ml (máx. 10 caracteres)</div>
                                        <ValidationMessage For="@(() => materiaPrima.UnidadMedida)" class="validation-message-editar" />
                                    </div>
                                </div>
                            </div>

                            <!-- Configuración de Stock -->
                            <div class="form-section-mp">
                                <h6 class="form-section-title-mp">
                                    <i class="bi bi-graph-down me-2"></i>
                                    Configuración de Stock
                                </h6>

                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label">Stock Mínimo</label>
                                        <InputNumber class="form-control" @bind-Value="materiaPrima.StockMinimo"
                                                     step="0.01" min="0" max="999999999" />
                                        <div class="form-text">Cantidad mínima requerida en inventario</div>
                                        <ValidationMessage For="@(() => materiaPrima.StockMinimo)" class="validation-message-editar" />
                                    </div>
                                </div>
                            </div>

                            <!-- Vista previa de cambios -->
                            <div class="data-preview">
                                <h6><i class="bi bi-eye me-2"></i>Vista Previa</h6>
                                <div class="preview-item">
                                    <span class="preview-label">Nombre:</span>
                                    <span class="preview-value">@materiaPrima.Nombre</span>
                                </div>
                                <div class="preview-item">
                                    <span class="preview-label">Unidad:</span>
                                    <span class="preview-value">@materiaPrima.UnidadMedida</span>
                                </div>
                                <div class="preview-item">
                                    <span class="preview-label">Stock Mínimo:</span>
                                    <span class="preview-value">@materiaPrima.StockMinimo.ToString("F2")</span>
                                </div>
                            </div>

                            <!-- Botones de acción -->
                            <div class="d-flex justify-content-between mt-4 pt-3 border-top">
                                <button type="button" class="btn btn-editar-mp-secondary" @onclick="VolverAGestion">
                                    <i class="bi bi-arrow-left me-2"></i>
                                    Cancelar
                                </button>
                                <button type="submit" class="btn btn-editar-mp-primary" disabled="@isSubmitting">
                                    <i class="bi bi-check-circle me-2"></i>
                                    @(isSubmitting ? "Actualizando..." : "Actualizar Materia Prima")
                                </button>
                            </div>
                        </EditForm>
                    </div>
                </div>

                <!-- Información del registro -->
                <div class="card mt-4 border-0 bg-light">
                    <div class="card-body">
                        <h6 class="mb-3"><i class="bi bi-clock-history me-2"></i>Información del Registro</h6>
                        <div class="row">
                            <div class="col-md-6">
                                <small class="text-muted">ID del Registro: <strong>#@materiaPrima.Id</strong></small>
                            </div>
                            <div class="col-md-6 text-end">
                                <small class="text-muted">Última actualización: @DateTime.Now.ToString("dd/MM/yyyy HH:mm")</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    [Parameter] public int Id { get; set; }
    private MateriaPrima? materiaPrima;
    private bool cargando = true;
    private bool isSubmitting = false;

    protected override async Task OnInitializedAsync()
    {
        await CargarMateriaPrima();
    }

    private async Task CargarMateriaPrima()
    {
        cargando = true;
        StateHasChanged();

        try
        {
            var response = await repository.GetAsync<MateriaPrima>($"api/MateriaPrima/{Id}");
            if (!response.Error && response.Response != null)
            {
                materiaPrima = response.Response;
            }
            else
            {
                await sweetAlertService.FireAsync("Error", "No se pudo cargar la materia prima", SweetAlertIcon.Error);
                VolverAGestion();
            }
        }
        catch (Exception ex)
        {
            await sweetAlertService.FireAsync("Error", $"Error al cargar: {ex.Message}", SweetAlertIcon.Error);
        }
        finally
        {
            cargando = false;
            StateHasChanged();
        }
    }

    private async Task ActualizarMateriaPrima()
    {
        if (materiaPrima == null) return;

        isSubmitting = true;
        StateHasChanged();

        try
        {
            var response = await repository.PutAsync($"api/MateriaPrima/{Id}", materiaPrima);
            if (!response.Error)
            {
                await sweetAlertService.FireAsync("Éxito", "Materia prima actualizada correctamente", SweetAlertIcon.Success);
                VolverAGestion();
            }
            else
            {
                var errorMsg = await response.GetErrorMessageAsync();
                await sweetAlertService.FireAsync("Error", errorMsg, SweetAlertIcon.Error);
            }
        }
        catch (HttpRequestException httpEx)
        {
            await sweetAlertService.FireAsync("Error de conexión", "No se pudo conectar con el servidor", SweetAlertIcon.Error);
        }
        catch (Exception ex)
        {
            await sweetAlertService.FireAsync("Error", $"Error inesperado: {ex.Message}", SweetAlertIcon.Error);
        }
        finally
        {
            isSubmitting = false;
            StateHasChanged();
        }
    }

    private void VolverAGestion()
    {
        nav.NavigateTo("/Empleado/mp/MateriasPrimas");
    }
}