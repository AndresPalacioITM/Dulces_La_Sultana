@page "/empleados/edit/{id:int}"

@using CurrieTechnologies.Razor.SweetAlert2
@using Sultana.Shared.Entities
@using Sultana.WEB.Repositories

@inject IRepository repository
@inject SweetAlertService swal
@inject NavigationManager nav

<h3>Editar empleado</h3>

@if (empleado is null)
{
    <p>Cargando...</p>
}
else
{
    <EditForm Model="empleado" OnValidSubmit="GuardarAsync">
        <DataAnnotationsValidator />

        <div class="card">
            <div class="card-header">
                <span>
                    <i class="bi bi-person-badge"></i> Editar empleado
                    <button class="btn btn-sm btn-primary float-end" type="submit">
                        <i class="bi bi-check2"></i> Guardar cambios
                    </button>
                </span>
            </div>

            <div class="card-body">
                <div class="row g-3">

                    <div class="col-md-6">
                        <label class="form-label">Nombre</label>
                        <InputText class="form-control" @bind-Value="empleado.Nombre" />
                        <ValidationMessage For="@(() => empleado.Nombre)" />
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Cargo</label>
                        <InputText class="form-control" @bind-Value="empleado.Cargo" />
                        <ValidationMessage For="@(() => empleado.Cargo)" />
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Contacto</label>
                        <InputText class="form-control" @bind-Value="empleado.Contacto" />
                        <ValidationMessage For="@(() => empleado.Contacto)" />
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Correo</label>
                        <InputText class="form-control" type="email" @bind-Value="empleado.Email" />
                        <ValidationMessage For="@(() => empleado.Email)" />
                    </div>

                </div>
            </div>

            <div class="card-footer d-flex gap-2">
                <button class="btn btn-secondary" type="button" @onclick="Volver">Regresar</button>
            </div>
        </div>
    </EditForm>
}

@code {
    [Parameter] public int Id { get; set; }

    private Empleado? empleado;

    protected override async Task OnInitializedAsync()
    {
        var resp = await repository.GetAsync<Empleado>($"/api/empleados/{Id}");
        if (resp.Error)
        {
            if (resp.HttpResponseMessage.StatusCode == System.Net.HttpStatusCode.NotFound)
            {
                await swal.FireAsync("Aviso", "Empleado no encontrado.", SweetAlertIcon.Warning);
                nav.NavigateTo("/empleados");
                return;
            }

            var msg = await resp.GetErrorMessageAsync();
            await swal.FireAsync("Error", msg, SweetAlertIcon.Error);
            nav.NavigateTo("/empleados");
            return;
        }

        empleado = resp.Response!;
    }

    private async Task GuardarAsync()
    {
        var resp = await repository.PutAsync($"/api/empleados/{empleado!.Id}", empleado);
        if (resp.Error)
        {
            var msg = await resp.GetErrorMessageAsync();
            await swal.FireAsync("Error", msg, SweetAlertIcon.Error);
            return;
        }

        await swal.FireAsync("Ok", "Empleado actualizado.", SweetAlertIcon.Success);
        nav.NavigateTo("/empleados");
    }

    private void Volver() => nav.NavigateTo("/empleados");
}
