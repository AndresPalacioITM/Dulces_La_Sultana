@page "/Login"

@using Sultana.Shared.DTOs
@using CurrieTechnologies.Razor.SweetAlert2
@using Microsoft.AspNetCore.Components.Authorization

@inject IRepository repository
@inject ILoginService loginService
@inject NavigationManager nav
@inject SweetAlertService swal
@inject AuthenticationStateProvider authenticationStateProvider

<div class="login-wrapper">
    <div class="login-card">
        <h3 class="login-title">Iniciar sesión</h3>

        <EditForm Model="model" OnValidSubmit="LoginAsync">
            <DataAnnotationsValidator />
            <ValidationSummary />

            <div class="mb-3">
                <label class="form-label">Email</label>
                <InputText class="form-control" @bind-Value="model.Email" />
                <ValidationMessage For="@(() => model.Email)" />
            </div>

            <div class="mb-3">
                <label class="form-label">Contraseña</label>
                <InputText class="form-control" type="password" @bind-Value="model.Password" />
                <ValidationMessage For="@(() => model.Password)" />
            </div>

            <div class="d-flex gap-2 mt-3">
                <button class="btn btn-primary w-100" type="submit">Ingresar</button>
                <button type="button" class="btn btn-outline-secondary w-100" @onclick="OnCancel">Cancelar</button>
            </div>
        </EditForm>
    </div>
</div>

@code {
    private LoginDTO model = new();

    private async Task LoginAsync()
    {
        var resp = await repository.PostAsync<LoginDTO, TokenDTO>("/api/accounts/Login", model);
        if (resp.Error)
        {
            var msg = await resp.GetErrorMessageAsync();
            await swal.FireAsync("Error", msg, SweetAlertIcon.Error);
            return;
        }

        await loginService.LoginAsync(resp.Response!);
        // Obtener el cargo del usuario y redirigir
        var authState = await authenticationStateProvider.GetAuthenticationStateAsync();
        var cargo = authState.User.FindFirst("Cargo")?.Value;
        var redirectTo = cargo?.ToLower() switch
        {
            "admin" => "/EditEmpleados",
            "empleado" => "/Empleado",
            "proveedor" => "/Proveedor",
            _ => "/"
        };
        nav.NavigateTo(redirectTo, forceLoad: true);
    }

    private void OnCancel() => nav.NavigateTo("/");
}
