@page "/Register"
@using CurrieTechnologies.Razor.SweetAlert2
@using Sultana.Shared.DTOs
@using Sultana.Shared.Entities 
@using Sultana.WEB.Repositories
@using Sultana.WEB.Auth

@inject IRepository repository
@inject SweetAlertService sweet
@inject NavigationManager nav
@inject ILoginService loginService

<div class="register-container">
    <div class="register-card">
        <h3 class="text-center mb-3">Registrar nuevo usuario</h3>

        <EditForm Model="model" OnValidSubmit="CreateAsync">
            <DataAnnotationsValidator />
            <ValidationSummary />

            <div class="mb-3">
                <label class="form-label">Nombre</label>
                <InputText class="form-control" @bind-Value="model.Nombre" 
                          @oninput="FormatName" />
                <ValidationMessage For="@(() => model.Nombre)" />
            </div>

            <div class="mb-3">
                <label class="form-label">Cargo</label>
                <InputSelect class="form-control" @bind-Value="model.Cargo">
                    <option value="">Seleccione un cargo</option>
                    <option value="Empleado">Empleado</option>
                    <option value="Proveedor">Proveedor</option>
                </InputSelect>
                <ValidationMessage For="@(() => model.Cargo)" />
            </div>

            @if (model.Cargo == "Empleado")
            {
                <div class="mb-3">
                    <label class="form-label">Contacto</label>
                    <InputText class="form-control" @bind-Value="model.Contacto" />
                    <ValidationMessage For="@(() => model.Contacto)" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Correo</label>
                    <InputText class="form-control" type="email" @bind-Value="model.Email" />
                    <ValidationMessage For="@(() => model.Email)" />
                </div>
            }
            else if (model.Cargo == "Proveedor")
            {
                <div class="mb-3">
                    <label class="form-label">Nit</label>
                    <InputText class="form-control" @bind-Value="model.Nit" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Empresa</label>
                    <InputText class="form-control" @bind-Value="model.Empresa" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Direccion</label>
                    <InputText class="form-control" @bind-Value="model.Direccion" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Correo</label>
                    <InputText class="form-control" type="email" @bind-Value="model.Email" />
                    <ValidationMessage For="@(() => model.Email)" />
                </div>
            }

            <!-- Campos comunes para ambos -->
            @if (!string.IsNullOrEmpty(model.Cargo))
            {
                <div class="mb-3">
                    <label class="form-label">Contraseña</label>
                    <InputText class="form-control" type="password" @bind-Value="model.Password" />
                    <ValidationMessage For="@(() => model.Password)" />
                </div>

                <div class="mb-4">
                    <label class="form-label">Confirmar contraseña</label>
                    <InputText class="form-control" type="password" @bind-Value="model.PasswordConfirm" />
                    <ValidationMessage For="@(() => model.PasswordConfirm)" />
                </div>
            }

            <div class="d-flex gap-2 justify-content-end">
                <button class="btn btn-primary register-button" type="submit" disabled="@isSubmitting">
                    @if (isSubmitting)
                    {
                        <span class="spinner-border spinner-border-sm me-1" role="status"></span>
                    }
                    Registrar
                </button>

                <button type="button" class="btn btn-outline-secondary" @onclick="OnCancel">
                    Cancelar
                </button>
            </div>
        </EditForm>
    </div>
</div>

@code {
    private RegisterDTO model = new();
    
    private bool isSubmitting;

    private void FormatName(ChangeEventArgs e)
    {
        var value = e.Value?.ToString();
        if (!string.IsNullOrWhiteSpace(value))
        {
            model.Nombre = System.Globalization.CultureInfo.CurrentCulture.TextInfo.ToTitleCase(value.ToLower());
        }
    }

    // private void OnCargoChanged(ChangeEventArgs e)
    // {
        
        
    //     // Limpiar campos específicos al cambiar de cargo
    //     if (model.Cargo != "Proveedor")
    //     {
    //         model.Nit = null;
    //         model.Empresa = null;
    //         model.Direccion = null;
    //         model.Email = null;
    //     }
    //     if (model.Cargo != "Empleado")
    //     {
    //         model.Contacto = null;
    //         model.Email = null;
    //     }
    // }

    private async Task CreateAsync()
    {
        if (isSubmitting) return;
        if (string.IsNullOrEmpty(model.Cargo))
        {
            await sweet.FireAsync("Error", "Por favor seleccione un cargo", SweetAlertIcon.Error);
            return;
        }

        isSubmitting = true;

        try
        {
            var resp = await repository.PostAsync<RegisterDTO, TokenDTO>("/api/accounts/register", model);

            if (resp.Error)
            {
                var msg = await resp.GetErrorMessageAsync();
                await sweet.FireAsync("Error", msg, SweetAlertIcon.Error);
                return;
            }

            await loginService.LoginAsync(resp.Response!);
            await sweet.FireAsync("Registro exitoso", "Bienvenid@, tu sesión se inició automáticamente.", SweetAlertIcon.Success);
            nav.NavigateTo("/");
        }
        catch (Exception ex)
        {
            await sweet.FireAsync("Error inesperado", ex.Message, SweetAlertIcon.Error);
        }
        finally
        {
            isSubmitting = false;
        }
    }

    private void OnCancel() => nav.NavigateTo("/");
}