@page "/Register"

@using Sultana.Shared.DTOs
@using CurrieTechnologies.Razor.SweetAlert2

@inject IRepository repository
@inject ILoginService loginService
@inject NavigationManager nav
@inject SweetAlertService swal

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-sm border-0">
                <div class="card-body p-4">
                    <h3 class="text-center mb-4 text-primary">Registrar nuevo empleado</h3>

                    <EditForm Model="model" OnValidSubmit="RegisterAsync">
                        <DataAnnotationsValidator />
                        <ValidationSummary />

                        <div class="mb-3">
                            <label class="form-label">Nombre</label>
                            <InputText class="form-control" @bind-Value="model.Nombre" />
                            <ValidationMessage For="@(() => model.Nombre)" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Cargo</label>
                            <InputText class="form-control" @bind-Value="model.Cargo" />
                            <ValidationMessage For="@(() => model.Cargo)" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Contacto</label>
                            <InputText class="form-control" @bind-Value="model.Contacto" />
                            <ValidationMessage For="@(() => model.Contacto)" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Email</label>
                            <InputText class="form-control" type="email" @bind-Value="model.Email" />
                            <ValidationMessage For="@(() => model.Email)" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Contraseña</label>
                            <InputText class="form-control" type="password" @bind-Value="model.Password" />
                            <ValidationMessage For="@(() => model.Password)" />
                        </div>

                        <div class="mb-4">
                            <label class="form-label">Confirmar contraseña</label>
                            <InputText class="form-control" type="password" @bind-Value="model.PasswordConfirm" />
                            <ValidationMessage For="@(() => model.PasswordConfirm)" />
                        </div>

                        <div class="d-flex justify-content-between">
                            <button class="btn btn-primary" type="submit">Crear cuenta</button>
                            <button type="button" class="btn btn-outline-secondary" @onclick="OnCancel">Cancelar</button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private UserDTO model = new();

    private async Task RegisterAsync()
    {
        var resp = await repository.PostAsync<UserDTO, TokenDTO>("/api/accounts/CreateUser", model);
        if (resp.Error)
        {
            var msg = await resp.GetErrorMessageAsync();
            await swal.FireAsync("Error", msg, SweetAlertIcon.Error);
            return;
        }

        await swal.FireAsync("¡Listo!", "Cuenta creada correctamente.", SweetAlertIcon.Success);
        await loginService.LoginAsync(resp.Response!.Token);
        nav.NavigateTo("/");
    }

    private void OnCancel() => nav.NavigateTo("/");
}
