@page "/Register"

@using CurrieTechnologies.Razor.SweetAlert2
@using Sultana.Shared.DTOs
@using Sultana.WEB.Repositories
@using Sultana.WEB.Auth

@inject IRepository repository
@inject SweetAlertService sweet
@inject NavigationManager nav
@inject ILoginService loginService

<h3 class="mb-3 text-center">Registrar nuevo empleado</h3>

<div class="card shadow-sm p-4" style="max-width: 600px; margin: 0 auto; background-color: #fffbe6;">
    <EditForm Model="model" OnValidSubmit="CreateAsync">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="mb-3">
            <label class="form-label">Nombre</label>
            <InputText class="form-control form-control-sm" @bind-Value="model.Nombre" />
            <ValidationMessage For="@(() => model.Nombre)" />
        </div>

        <div class="mb-3">
            <label class="form-label">Cargo</label>
            <InputText class="form-control form-control-sm" @bind-Value="model.Cargo" />
            <ValidationMessage For="@(() => model.Cargo)" />
        </div>

        <div class="mb-3">
            <label class="form-label">Contacto</label>
            <InputText class="form-control form-control-sm" @bind-Value="model.Contacto" />
            <ValidationMessage For="@(() => model.Contacto)" />
        </div>

        <div class="mb-3">
            <label class="form-label">Correo</label>
            <InputText class="form-control form-control-sm" type="email" @bind-Value="model.Email" />
            <ValidationMessage For="@(() => model.Email)" />
        </div>

        <div class="mb-3">
            <label class="form-label">Contraseña</label>
            <InputText class="form-control form-control-sm" type="password" @bind-Value="model.Password" />
            <ValidationMessage For="@(() => model.Password)" />
        </div>

        <div class="mb-4">
            <label class="form-label">Confirmar contraseña</label>
            <InputText class="form-control form-control-sm" type="password" @bind-Value="model.PasswordConfirm" />
            <ValidationMessage For="@(() => model.PasswordConfirm)" />
        </div>

        <div class="d-flex gap-2 justify-content-end">
            <button class="btn btn-primary" type="submit" disabled="@isSubmitting">
                @if (isSubmitting)
                {
                    <span class="spinner-border spinner-border-sm me-1" role="status"></span>
                }
                Registrar
            </button>
            <button type="button" class="btn btn-outline-secondary" @onclick="OnCancel">Cancelar</button>
        </div>
    </EditForm>
</div>

@code {
    private RegisterDTO model = new();
    private bool isSubmitting;

    private async Task CreateAsync()
    {
        if (isSubmitting) return;
        isSubmitting = true;

        try
        {
            var resp = await repository.PostAsync<RegisterDTO, TokenDTO>("/api/accounts/register", model);

            if (resp.Error)
            {
                var msg = await resp.GetErrorMessageAsync();
                await sweet.FireAsync("Error", msg, SweetAlertIcon.Error);
                return;
            }

            await loginService.LoginAsync(resp.Response!.Token);
            await sweet.FireAsync("Registro exitoso", "Bienvenida, tu sesión se inició automáticamente.", SweetAlertIcon.Success);
            nav.NavigateTo("/");
        }
        catch (Exception ex)
        {
            await sweet.FireAsync("Error inesperado", ex.Message, SweetAlertIcon.Error);
        }
        finally
        {
            isSubmitting = false;
        }
    }

    private void OnCancel() => nav.NavigateTo("/");
}
